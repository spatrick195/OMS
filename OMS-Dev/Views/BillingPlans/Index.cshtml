@using Newtonsoft.Json
@model PayPal.Api.PlanList

@{ ViewBag.Title = "Billing Plans"; }

<div class="heads">
    <div class="col-md-12">
        <h2>Billing Plans</h2>
    </div>
</div>

<div class="row confirm">
    <div class="col-md-12">
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Type</th>
                    <th>State</th>
                    <th>Payment Definitions</th>
                    <th>Merchant Preferences</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var plan in Model.plans)
                {
                    <tr>
                        <td>@plan.id</td>
                        <td>@plan.name</td>
                        <td>@plan.type</td>
                        <td>@plan.state</td>
                        <td>@JsonConvert.SerializeObject(plan.payment_definitions)</td>
                        <td>@JsonConvert.SerializeObject(plan.merchant_preferences)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>