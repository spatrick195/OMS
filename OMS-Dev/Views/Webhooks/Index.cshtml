@using Newtonsoft.Json
@model PayPal.Api.WebhookList
@{
    ViewBag.Title = "Index"; 
}

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>URL</th>
            <th>Event Types</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var webhook in Model.webhooks)
        {
            <tr>
                <td>@webhook.id</td>
                <td>@webhook.url</td>
                <td>@JsonConvert.SerializeObject(webhook.event_types)</td>
                <td class="text-right">
                    @using (Html.BeginForm("Delete", "Webhooks", FormMethod.Post))
                    {
                        @Html.Hidden("webhookId", webhook.id)
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    }
                </td>
            </tr>
         }
    </tbody>
</table>